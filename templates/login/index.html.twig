{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <h1> Connexion </h1>
     {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input class="form-control my-2" type="text" id="username" name="_username" value="{{ last_username }}" required>

        <label for="password  ">Mot de passe:</label>
        <input class="form-control my-2" type="password" id="password" name="_password" required>

        <input type="hidden" name="_target_path" value="{{ path('app_account') }}"> 

        <button class="btn btn-success mt-2" type="submit">Connexion</button>
        <hr>
        <p>Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}"> S'inscrire</a></p>
        
    </form>
</div>
{% endblock %}
